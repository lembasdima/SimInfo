            <TextView
                android:textSize="@dimen/font_size_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/textValueColor"
                android:textIsSelectable="true"
                android:id="@+id/phone_Board_Name"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:textSize="@dimen/font_size_title"
                android:text="@string/phoneCPUABI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textTitleColor"
                android:id="@+id/phone_CPU_ABI" />

            <TextView
                android:textSize="@dimen/font_size_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/textValueColor"
                android:textIsSelectable="true"
                android:id="@+id/phone_CPU_ABI_Name"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:textSize="@dimen/font_size_title"
                android:text="@string/phoneCPUABI2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textTitleColor"
                android:id="@+id/phone_CPU_ABI_2" />

            <TextView
                android:textSize="@dimen/font_size_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/textValueColor"
                android:textIsSelectable="true"
                android:id="@+id/phone_CPU_ABI_2_Name"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:textSize="@dimen/font_size_title"
                android:text="@string/phoneDevice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textTitleColor"
                android:id="@+id/phone_Device" />

            <TextView
                android:textSize="@dimen/font_size_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
